<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- TITLE -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title must be entered!</div>
      </div>

      <!-- DESCRIPTION -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <!-- CURRENT IMAGE -->
      <div class="mb-3">
        <label class="form-label">Current Image</label>
        <img src="<%= originalImageUrl %>" class="img-fluid" style="width: 250px; object-fit: cover;" alt="Current Hotel Image">
      </div>

      <!-- NEW IMAGE UPLOAD + PREVIEW -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="image" class="form-control" onchange="previewImage(event)" />
        <img id="preview" class="img-fluid mt-2" style="width: 250px; object-fit: cover; display:none;" alt="Preview Image"
        required >
      </div>

      <script>
        function previewImage(event) {
          const preview = document.getElementById('preview');
          preview.src = URL.createObjectURL(event.target.files[0]);
          preview.style.display = 'block';
        }
      </script>

      <!-- CATEGORY -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" id="category" class="form-select">
          <% const categories = ["Room","Iconic Cities","Mountains","Castle","Arctic","Camping","Farms","Desert","Domes","Boats"]; %>
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>" <%= listing.category === cat ? "selected" : "" %>><%= cat %></option>
          <% }) %>
        </select>
      </div>

      <!-- PRICE & COUNTRY -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            class="form-control"
            required
          >
          <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- LOCATION -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        >
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <!-- EXTRA INFO: Guests, Check-in/out, Pets, Smoking -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="maxGuests" class="form-label">Max Guests</label>
          <input type="number" name="listing[maxGuests]" value="<%= listing.maxGuests || '' %>" class="form-control">
        </div>

        <div class="mb-3 col-md-4">
          <label for="checkIn" class="form-label">Check-in</label>
          <input type="text" name="listing[checkIn]" value="<%= listing.checkIn || '' %>" class="form-control">
        </div>

        <div class="mb-3 col-md-4">
          <label for="checkOut" class="form-label">Check-out</label>
          <input type="text" name="listing[checkOut]" value="<%= listing.checkOut || '' %>" class="form-control">
        </div>
      </div>

      <div class="mb-3 form-check">
        <input type="checkbox" name="listing[petsAllowed]" class="form-check-input" id="petsAllowed" <%= listing.petsAllowed ? "checked" : "" %>>
        <label class="form-check-label" for="petsAllowed">Pets Allowed</label>
      </div>

      <div class="mb-3 form-check">
        <input type="checkbox" name="listing[smokingAllowed]" class="form-check-input" id="smokingAllowed" <%= listing.smokingAllowed ? "checked" : "" %>>
        <label class="form-check-label" for="smokingAllowed">Smoking Allowed</label>
      </div>

      <!-- SUBMIT BUTTON -->
      <button class="btn edit-btn mt-3 w-100">Save Changes</button>
    </form>
  </div>
</div>

<style>
  .edit-btn {
    background-color:#fe424d !important;
    border: none !important;
    color: #fff;
  }
  .edit-btn:hover {
    background-color: #ff5b61 !important;
  }
</style>
